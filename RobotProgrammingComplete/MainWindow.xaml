<Window x:Class="RobotProgrammingComplete.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:RobotProgrammingComplete.Controls"
        Title="Robot Programming - Lernprogramm" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="Datei">
                <MenuItem Header="Feld laden (XML)..." Click="LoadField_Click"/>
                <MenuItem Header="Programm laden (TXT)..." Click="LoadProgram_Click"/>
                <Separator/>
                <MenuItem Header="Beenden" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Robot Map -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0">
                <controls:RobotMap x:Name="robotMap"/>
            </Border>

            <!-- Right Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Programm:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" x:Name="txtProgram"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"/>

                <TextBlock Grid.Row="2" Text="Fehler / Meldungen:" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBox Grid.Row="3" x:Name="txtErrors"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="#FFF0F0F0"
                         Foreground="Red"
                         FontFamily="Consolas"/>

                <TextBlock Grid.Row="4" x:Name="txtCollected" Text="Gesammelt: -" Margin="0,10,0,5"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnStart" Content="Start" Width="80" Margin="5" Click="Start_Click"/>
                    <Button x:Name="btnStop" Content="Stop" Width="80" Margin="5" Click="Stop_Click" IsEnabled="False"/>
                    <Button x:Name="btnReset" Content="Reset" Width="80" Margin="5" Click="Reset_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="txtStatus" Text="Bereit"/>
        </StatusBar>
    </Grid>
</Window>
