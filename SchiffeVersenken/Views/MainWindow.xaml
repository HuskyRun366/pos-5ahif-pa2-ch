<Window x:Class="SchiffeVersenken.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SchiffeVersenken.Controls"
        xmlns:converters="clr-namespace:SchiffeVersenken.Converters"
        Title="Schiffe Versenken" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E3A5F">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="R" Command="{Binding SchiffDrehenCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Menu -->
            <RowDefinition Height="Auto"/>    <!-- Toolbar/Status -->
            <RowDefinition Height="*"/>       <!-- Spielfelder -->
            <RowDefinition Height="Auto"/>    <!-- Platzierung Panel -->
            <RowDefinition Height="Auto"/>    <!-- StatusBar -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0" Background="#FF2C3E50">
            <Menu.Foreground>
                <SolidColorBrush Color="White"/>
            </Menu.Foreground>
            <MenuItem Header="Spiel" Foreground="White">
                <MenuItem Header="Server starten (Host)" Command="{Binding ServerStartenCommand}"/>
                <MenuItem Header="Verbinden (Client)..." Command="{Binding VerbindenCommand}"/>
                <Separator/>
                <MenuItem Header="Neues Spiel" Command="{Binding NeuesSpielCommand}"/>
                <Separator/>
                <MenuItem Header="Beenden" Click="Beenden_Click"/>
            </MenuItem>
            <MenuItem Header="Hilfe" Foreground="White">
                <MenuItem Header="Spielregeln" Click="Spielregeln_Click"/>
            </MenuItem>
        </Menu>

        <!-- Status Header -->
        <Border Grid.Row="1" Background="#FF2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="20" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PhaseText}"
                               FontSize="14" Foreground="LightGray" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FF34495E" CornerRadius="5" Padding="10,5" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SpielerName}" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text=": " Foreground="White"/>
                            <TextBlock Text="{Binding EigenePunkte}" Foreground="LightGreen" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="vs" Foreground="White" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>
                    <Border Background="#FF34495E" CornerRadius="5" Padding="10,5" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding GegnerName}" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text=": " Foreground="White"/>
                            <TextBlock Text="{Binding GegnerPunkte}" Foreground="LightCoral" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zwei Spielfelder nebeneinander -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Eigenes Spielfeld (View 1: Eigene Schiffe + Gegner-Angriffe) -->
            <Border Grid.Column="0" Background="#FF2C3E50" CornerRadius="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding EigenesFeldVM.Titel}"
                               FontSize="18" FontWeight="Bold" Foreground="White"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="5">
                        <controls:SpielfeldControl x:Name="eigenesFeld"
                            DataContext="{Binding EigenesFeldVM}"
                            ZellenGeklickt="EigenesFeld_ZellenGeklickt"
                            ZellenHover="EigenesFeld_ZellenHover"
                            ZellenHoverEnde="EigenesFeld_ZellenHoverEnde"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Trennbereich mit Legende -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="LEGENDE" Foreground="White" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Rectangle Width="15" Height="15" Fill="LightBlue" Stroke="Navy" StrokeThickness="1"/>
                    <TextBlock Text=" Wasser" Foreground="White" FontSize="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Rectangle Width="15" Height="15" Fill="DarkSlateGray" Stroke="Navy" StrokeThickness="1"/>
                    <TextBlock Text=" Schiff" Foreground="White" FontSize="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Rectangle Width="15" Height="15" Fill="OrangeRed" Stroke="Navy" StrokeThickness="1"/>
                    <TextBlock Text=" Treffer" Foreground="White" FontSize="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <Rectangle Width="15" Height="15" Fill="LightGray" Stroke="Navy" StrokeThickness="1"/>
                    <TextBlock Text=" Daneben" Foreground="White" FontSize="10"/>
                </StackPanel>
            </StackPanel>

            <!-- Gegnerisches Spielfeld (View 2: Angriffe + getroffene Schiffe) -->
            <Border Grid.Column="2" Background="#FF8E44AD" CornerRadius="10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding GegnerFeldVM.Titel}"
                               FontSize="18" FontWeight="Bold" Foreground="White"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="5">
                        <controls:SpielfeldControl x:Name="gegnerFeld"
                            DataContext="{Binding GegnerFeldVM}"
                            ZellenGeklickt="GegnerFeld_ZellenGeklickt"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Platzierungs-Panel (nur während Platzierungsphase sichtbar) -->
        <Border Grid.Row="3" Background="#FF34495E" Padding="15"
                Visibility="{Binding IstPlatzierungsPhase, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Platziere: " FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding PlatzierungVM.AktuellerSchiffName}"
                           FontSize="16" FontWeight="Bold" Foreground="Yellow" VerticalAlignment="Center" Margin="0,0,20,0"/>

                <Button Content="Drehen (R)" Command="{Binding SchiffDrehenCommand}"
                        Width="100" Height="35" Margin="5,0"
                        Background="#FF3498DB" Foreground="White" FontWeight="Bold"/>

                <TextBlock Text="{Binding PlatzierungVM.AusrichtungText}"
                           Foreground="LightGray" VerticalAlignment="Center" Margin="10,0" Width="80"/>

                <TextBlock Text="Verbleibend: " Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <TextBlock Text="{Binding PlatzierungVM.VerbleibendeSchiffe}"
                           FontSize="18" FontWeight="Bold" Foreground="Yellow" VerticalAlignment="Center"/>

                <Button Content="Zurücksetzen" Command="{Binding ZuruecksetzenCommand}"
                        Width="100" Height="35" Margin="20,0,0,0"
                        Background="#FFE74C3C" Foreground="White" FontWeight="Bold"/>

                <Button Content="Bereit!" Command="{Binding BereitCommand}"
                        Width="100" Height="35" Margin="10,0,0,0"
                        Background="#FF27AE60" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- StatusBar -->
        <StatusBar Grid.Row="4" Background="#FF1A252F">
            <StatusBarItem>
                <TextBlock Text="Tastenkürzel: R = Drehen | Klick = Platzieren/Schießen" Foreground="Gray"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
